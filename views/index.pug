extends layout

block content
  h1= title
  a(href="/new") New Message


  hr
  hr

  each document in message_list
    div
      li= document.username
        h2= document.message
        p= document.date
        h3= document.comments
        a.delete(href=document.url + "/delete") Delete Message
        p= "or"
        a(href=document.url + "/comment") Comment
        hr
