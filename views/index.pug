extends layout

block content
  h1= title
  a(href="/new") New Message


  hr
  hr

  each document in message_list
    div
      li= document.username
        h2= document.message
        p= document.date
        div
          ul
            each comment in document.comments
              li= comment.username
              p.comment-section= comment.comment
                a(href=comment._id + "/delete-comment") Delete Comment
        a.delete(href=document.url + "/delete") Delete Message
        |
        |
        a.comment(href=document.url + "/comment") Add Comment

        hr
